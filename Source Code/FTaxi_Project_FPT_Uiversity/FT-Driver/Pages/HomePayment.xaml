<phone:PhoneApplicationPage
    x:Class="FT_Driver.Pages.HomePayment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="PortraitOrLandscape" Orientation="Portrait"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="True">
    <toolkit:TransitionService.NavigationInTransition>
        <toolkit:NavigationInTransition>
            <toolkit:NavigationInTransition.Backward>
                <toolkit:TurnstileTransition Mode="BackwardIn" />
            </toolkit:NavigationInTransition.Backward>
            <toolkit:NavigationInTransition.Forward>
                <toolkit:TurnstileTransition Mode="ForwardIn" />
            </toolkit:NavigationInTransition.Forward>
        </toolkit:NavigationInTransition>
    </toolkit:TransitionService.NavigationInTransition>
    <toolkit:TransitionService.NavigationOutTransition>
        <toolkit:NavigationOutTransition>
            <toolkit:NavigationOutTransition.Backward>
                <toolkit:TurnstileTransition Mode="BackwardOut" />
            </toolkit:NavigationOutTransition.Backward>
            <toolkit:NavigationOutTransition.Forward>
                <toolkit:TurnstileTransition Mode="ForwardOut" />
            </toolkit:NavigationOutTransition.Forward>
        </toolkit:NavigationOutTransition>
    </toolkit:TransitionService.NavigationOutTransition>


    <phone:PhoneApplicationPage.Resources>
        <DataTemplate x:Name="lpkItemTemplate">
            <TextBlock Text="{Binding Country}" />
        </DataTemplate>
        <DataTemplate x:Name="lpkFullItemTemplate">
            <TextBlock Text="{Binding Country}" Style="{StaticResource PhoneTextTitle2Style}"/>
        </DataTemplate>
    </phone:PhoneApplicationPage.Resources>
    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="{StaticResource LayoutRootBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="768"/>
        </Grid.RowDefinitions>

        <Grid.Resources>
            <DataTemplate x:Name="PickerItemTemplate">
                <StackPanel Orientation="Horizontal">
                    <Border Background="#FF2E9FFF" Width="34" Height="34">
                        <TextBlock Text="{Binding Logo}" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="{Binding Name}" Margin="35 0 0 0"/>
                </StackPanel>
            </DataTemplate>
            <DataTemplate x:Name="PickerFullModeItemTemplate">
                <StackPanel Orientation="Horizontal" Margin="16 21 0 20">
                    <TextBlock Text="{Binding Name}" Margin="16 0 0 0" FontSize="43" FontFamily="{StaticResource PhoneFontFamilyLight}"/>
                    <TextBlock Text="language: "/>
                    <TextBlock Text="{Binding Logo}" Foreground="Green"/>
                </StackPanel>
            </DataTemplate>
        </Grid.Resources>
        <!--TitlePanel contains the name of the application and page title-->


        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="293"/>
                <RowDefinition Height="83*"/>
            </Grid.RowDefinitions>
            <Rectangle x:Name="panel_name" Margin="-7,16,0,208" Opacity="0.7" Grid.Row="1">
                <Rectangle.Fill>
                    <SolidColorBrush Color="White"/>
                </Rectangle.Fill>
                <Rectangle.Stroke>
                    <SolidColorBrush Color="{StaticResource RectangStrokeColor}"/>
                </Rectangle.Stroke>
            </Rectangle>
            <Rectangle x:Name="panel_moreInfor" Margin="-4,142,-3,314" Grid.RowSpan="2" Opacity="0.7" Grid.Row="1">
                <Rectangle.Fill>
                    <SolidColorBrush Color="#FFF4F4F5"/>
                </Rectangle.Fill>
                <Rectangle.Stroke>
                    <SolidColorBrush Color="{StaticResource RectangStrokeColor}"/>
                </Rectangle.Stroke>
            </Rectangle>
            <Rectangle x:Name="panel_AddAddress" Margin="-4,124,-3,71" Opacity="0.7" Fill="#FFF4F4F5" Grid.Row="2">
                <Rectangle.Stroke>
                    <SolidColorBrush Color="{StaticResource RectangStrokeColor}"/>
                </Rectangle.Stroke>
            </Rectangle>
            <TextBlock x:Name="tbl_ChangePassword" HorizontalAlignment="Center" Margin="157,374,186,0" TextWrapping="Wrap" Text="Đổi mật khẩu" VerticalAlignment="Top" FontSize="23"  Grid.Row="2" TextDecorations="Underline"/>
            <Rectangle x:Name="line1" HorizontalAlignment="Left" Height="1" Margin="82,68,0,0" VerticalAlignment="Top" Width="234" Grid.Row="1">
                <Rectangle.Fill>
                    <SolidColorBrush Color="{StaticResource RectangStrokeColor}" Opacity="0.5"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle x:Name="line2" HorizontalAlignment="Left" Height="1" Margin="82,193,0,0" VerticalAlignment="Top" Width="396" Grid.Row="1">
                <Rectangle.Fill>
                    <SolidColorBrush Color="{StaticResource RectangStrokeColor}" Opacity="0.5"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle x:Name="line3" HorizontalAlignment="Left" Height="1" Margin="82,248,0,0" VerticalAlignment="Top" Width="396" Grid.Row="1">
                <Rectangle.Fill>
                    <SolidColorBrush Color="{StaticResource RectangStrokeColor}" Opacity="0.5"/>
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle x:Name="line4" HorizontalAlignment="Left" Height="1" Margin="82,134,0,0" VerticalAlignment="Top" Width="396" Grid.Row="2">
                <Rectangle.Fill>
                    <SolidColorBrush Color="{StaticResource RectangStrokeColor}" Opacity="0.5"/>
                </Rectangle.Fill>
            </Rectangle>
            <TextBlock x:Name="tbl_HomeAddress" HorizontalAlignment="Left" TextWrapping="Wrap" Text="118/8/1 Nguyễn Khánh Toàn &#xA;Cầu Giấy &#xA;Hà Nội" VerticalAlignment="Top" Margin="69,135,0,0" Grid.Row="2" Height="90" Width="348" Foreground="Black" FontSize="22"/>
            <TextBlock x:Name="tbl_OfficeAddress" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Sô 14, Khu biệt thự 1&#xA;Hoàng Mai&#xA;Hà Nội" VerticalAlignment="Top" Margin="69,254,0,0" Grid.Row="2" Height="90" Width="348" Foreground="Black" FontSize="22"/>
            <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Image x:Name="img_EditIcon_HomeAddress" HorizontalAlignment="Left" Height="100" Margin="422,134,0,0" VerticalAlignment="Top" Width="52" Grid.Row="2" Source="/Images/Icons/icon_Edit.jpg" Opacity="0.8" />
            <Image x:Name="img_EditIcon_OfficeAddress" HorizontalAlignment="Left" Height="100" Margin="422,244,0,0" VerticalAlignment="Top" Width="52" Grid.Row="2" Source="/Images/Icons/icon_Edit.jpg" Opacity="0.8" />
            <StackPanel x:Name="StckUserDetailsUI" HorizontalAlignment="Left" Height="768" VerticalAlignment="Top" Width="480" Grid.RowSpan="3">
                <Grid Height="430">
                    <toolkit:ListPicker FullModeItemTemplate="{StaticResource PickerFullModeItemTemplate}"
                		x:Name="lpk_Language" Margin="0,376,10,-124" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black" ItemTemplate="{StaticResource PickerItemTemplate}"/>
                    <TextBox x:Name="txt_Email" Text="lapnvse02314@fpt.edu.vn" HorizontalAlignment="Left" Height="72" Margin="5,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="465" Background="{x:Null}" BorderBrush="{x:Null}" Padding="60,2,2,2"/>
                    <TextBox x:Name="txt_PhoneNumber" Text="+84988707727" HorizontalAlignment="Left" Height="72" Margin="5,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="465" Background="{x:Null}" BorderBrush="{x:Null}" Padding="60,2,2,2"/>
                    <TextBox x:Name="txt_Balance" Text=" 5.000 VNĐ" HorizontalAlignment="Left" Height="72" Margin="0,307,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="465" Background="{x:Null}" BorderBrush="{x:Null}" Padding="60,2,2,2"/>
                    <TextBox x:Name="txt_FirstAndMiddleName" Text="Nguyễn Văn Lâp" Height="72" TextWrapping="Wrap"  VerticalAlignment="Top" Width="436" HorizontalAlignment="Left" RenderTransformOrigin="0.803,0.667" Margin="10,70,0,0" Background="{x:Null}" BorderBrush="{x:Null}" Padding="{StaticResource TextboxTextPaddingLeft}"/>
                </Grid>
            </StackPanel>
            
            <Image x:Name="img_UserFName_Copy" HorizontalAlignment="Left" Height="50" Margin="5,144,0,0" Grid.Row="1" VerticalAlignment="Top" Width="50" Source="/Images/Icons/PNG/iconPNG_Email.png"/>
            <Image x:Name="img_UserFName_Copy1" HorizontalAlignment="Left" Height="50" Margin="5,193,0,0" Grid.Row="1" VerticalAlignment="Top" Width="50" Source="/Images/Icons/PNG/iconPNG_PhoneNumber.png"/>
            <Image x:Name="img_UserFName_Copy2" HorizontalAlignment="Left" Height="50" Margin="0,134,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" Source="/Images/Icons/PNG/iconPNG_Address.png"/>
            <Image x:Name="img_UserFName_Copy3" HorizontalAlignment="Left" Height="50" Margin="0,256,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" Source="/Images/Icons/PNG/iconPNG_AddressOffice.png"/>
            <Image x:Name="icon_money" HorizontalAlignment="Left" Height="40" Margin="10,266,0,0" Grid.Row="1" VerticalAlignment="Top" Width="40" Source="/Images/Icons/icon_money.png" Grid.RowSpan="2"/>


        </Grid>
        <Image x:Name="img_Navbar" HorizontalAlignment="Left" Height="69" VerticalAlignment="Top" Width="480" Source="/Images/Others/img_AppNavbar.png"/>
        <TextBlock x:Name="tbl_Profile" HorizontalAlignment="Center" Margin="113,10,90,0" TextWrapping="Wrap" Text="HÓA ĐƠN THANH TOÁN" VerticalAlignment="Top" FontSize="24" Width="277"/>
    </Grid>

</phone:PhoneApplicationPage>