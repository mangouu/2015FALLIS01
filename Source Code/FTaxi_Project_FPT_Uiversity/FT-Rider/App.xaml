<Application
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone" xmlns:System="clr-namespace:System;assembly=mscorlib"
    x:Class="FT_Rider.App"
    >

    <!--Application Resources-->
    <Application.Resources>
        <local:LocalizedStrings xmlns:local="clr-namespace:FT_Rider" x:Key="LocalizedStrings"/>
        <Color x:Key="Button_BackgroundColor_Blue">#FF2E9FFF</Color>
        <System:Double x:Key="Button_BorderOpacity_20">0.2</System:Double>
        <Color x:Key="Button_BackgroundColor_Orange">#FFE28C01</Color>
        <System:Double x:Key="Textbox_FontSize">23</System:Double>
        <System:Double x:Key="Button_FontSize">22</System:Double>
        <System:Double x:Key="Text_LinkTextFontSize">22</System:Double>
    </Application.Resources>

    <Application.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService
            Launching="Application_Launching" Closing="Application_Closing"
            Activated="Application_Activated" Deactivated="Application_Deactivated"/>
    </Application.ApplicationLifetimeObjects>

</Application>